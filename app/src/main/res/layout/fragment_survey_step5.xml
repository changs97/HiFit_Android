<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.survey.SurveyStep5Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/survey_step5_img_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/survey_step5_txt_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="48dp"
            android:fontFamily="sans-serif-black"
            android:text="5/10"
            android:textColor="@color/violet4"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/survey_step5_img_back" />

        <TextView
            android:id="@+id/survey_step5_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/survey_step5_title"
            android:textColor="@color/gray4"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/survey_step5_txt_progress"
            app:layout_constraintTop_toBottomOf="@+id/survey_step5_txt_progress" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/survey_step5_content"
            android:textColor="@color/gray6"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/survey_step5_txt_title"
            app:layout_constraintTop_toBottomOf="@+id/survey_step5_txt_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="cm"
            android:textSize="16sp"
            android:textColor="@color/violet4"
            app:layout_constraintBottom_toBottomOf="@+id/survey_step5_edit"
            app:layout_constraintEnd_toEndOf="@+id/survey_step5_edit"
            app:layout_constraintTop_toTopOf="@+id/survey_step5_edit" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/survey_step5_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="60dp"
            android:maxLength="3"
            android:background="@drawable/background_stroke_gray7"
            android:hint="@string/survey_step5_hint"
            android:padding="12dp"
            android:inputType="number"
            android:textColor="@color/gray4"
            android:textColorHint="@color/gray"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/survey_step5_btn_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_radius_10dp_solid_violet4"
            android:gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:paddingVertical="12dp"
            android:text="@string/survey_continue"
            android:textColor="@color/gray5"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
