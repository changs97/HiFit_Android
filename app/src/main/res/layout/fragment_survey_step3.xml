<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.survey.SurveyStep3Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="50dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/survey_step3_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:text="@string/survey_step3_question"
            android:textColor="@color/violet2"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/notodanskr_regular_hestia"
            android:text="@string/survey_step3_content"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/survey_step3_txt_title"
            app:layout_constraintTop_toBottomOf="@+id/survey_step3_txt_title" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginTop="60dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="@drawable/gray_stroke_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/survey_step3_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:fontFamily="@font/notosanskr_medium_hestia"
                android:inputType="number"
                android:maxLength="3"
                android:maxLines="1"
                android:paddingVertical="12dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/gray2"
                android:textColorHint="@color/gray"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="cm"
                android:textSize="20sp"
                android:fontFamily="@font/notodanskr_regular_hestia"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:textColorHint="@color/gray"/>



        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/survey_step3_btn_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:textColor="@color/white"
            android:text="@string/survey_continue"
            android:background="@drawable/violet_button"
            android:layout_marginBottom="30dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>