<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.survey.SurveyStep10Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/survey_step10_img_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/survey_step10_txt_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="48dp"
            android:fontFamily="sans-serif-black"
            android:text="9/10"
            android:textColor="@color/violet4"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/survey_step10_img_back" />

        <TextView
            android:id="@+id/survey_step10_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/survey_step10_title"
            android:textColor="@color/gray4"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/survey_step10_txt_progress"
            app:layout_constraintTop_toBottomOf="@+id/survey_step10_txt_progress" />

        <RadioGroup
            android:id="@+id/survey_step10_radio_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="94dp"
            app:layout_constraintTop_toBottomOf="@+id/survey_step10_txt_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/survey_step10_radio_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:button="@null"
                android:drawableStart="@drawable/btn_radio_off"
                android:paddingVertical="16dp"
                android:paddingStart="12dp"
                android:drawablePadding="12dp"
                android:text="@string/survey_answer1"
                android:background="@drawable/selector_radio_button"
                android:textColor="@color/gray4"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/survey_step10_radio_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_marginBottom="12dp"
                android:paddingVertical="16dp"
                android:text="@string/survey_answer2"
                android:drawableStart="@drawable/btn_radio_off"
                android:paddingStart="12dp"
                android:drawablePadding="12dp"
                android:background="@drawable/selector_radio_button"
                android:textColor="@color/gray4"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/survey_step10_radio_btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableStart="@drawable/btn_radio_off"
                android:paddingStart="12dp"
                android:drawablePadding="12dp"
                android:paddingVertical="16dp"
                android:text="@string/survey_answer3"
                android:background="@drawable/selector_radio_button"
                android:textColor="@color/gray4"
                android:textSize="16sp" />
        </RadioGroup>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/survey_step10_btn_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_radius_10dp_solid_violet4"
            android:gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:paddingVertical="12dp"
            android:text="@string/survey_continue"
            android:textColor="@color/gray5"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
