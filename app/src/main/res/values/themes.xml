<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HiFitAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/violet</item>
        <item name="android:statusBarColor" >@color/violet</item>
        <item name="android:windowLightStatusBar" >true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.HiFitAndroid" parent="Base.Theme.HiFitAndroid" />

    <style name="customTextViewShadows" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:shadowColor">#29000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">3.0</item>
        <item name="android:shadowRadius">7.0</item>
    </style>

    <style name="customTextViewFontStyleBold" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/notosanskr_bold_hestia</item>
    </style>

    <style name="customTextViewFontStyleTMedium" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/notosanskr_medium_hestia</item>
    </style>

    <style name="customTextViewFontStyleLight" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/notosanskr_light_hestia</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/notodanskr_regular_hestia</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>